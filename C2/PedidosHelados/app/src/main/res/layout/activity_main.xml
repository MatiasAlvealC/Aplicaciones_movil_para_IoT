<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="#f0f0f0">

        <!-- Título de la aplicación -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedidos de helados"
            android:textSize="24sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"/>

        <!-- Espacio entre el título y el formulario -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Etiqueta para el usuario -->
        <TextView
            android:id="@+id/labelUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left"/>

        <!-- Input de texto para usuario -->
        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese su usuario"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp"/>

        <!-- Etiqueta para la contraseña -->
        <TextView
            android:id="@+id/labelPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left"/>

        <!-- Input de texto para contraseña -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp"/>

        <!-- Espacio entre los campos y el botón -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <!-- Botón de Iniciar sesión -->
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:padding="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>